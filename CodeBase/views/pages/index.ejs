<script>
function openForm() {
  if(document.getElementById("mySignUpForm").style.display =="block"){
    document.getElementById("mySignUpForm").style.display = "none"
  }
  document.getElementById("myLogInForm").style.display = "block";
  document.getElementById("coverBackground").className = "coverOn";
}

function openSignUpForm() {
  document.getElementById("myLogInForm").style.display = "none";
  document.getElementById("mySignUpForm").style.display = "block";
  document.getElementById("coverBackground").className = "coverOn";
}

function closeForm() {
  document.getElementById("mySignUpForm").style.display = "none";
  document.getElementById("myLogInForm").style.display = "block";
  document.getElementById("coverBackground").className = "coverOn";
}

function exitForm(){
  if(document.getElementById("mySignUpForm").style.display =="block"){
    document.getElementById("mySignUpForm").style.display = "none"
  }
  document.getElementById("myLogInForm").style.display = "none";
  document.getElementById("coverBackground").className = "coverOff";
}

</script>